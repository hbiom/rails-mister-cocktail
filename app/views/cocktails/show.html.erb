<div class="container">

  <h1> <%=  @cocktail.name %> </h1>

  <h1> <%  @cocktail.doses.each do |dose| %> </h1>
    <table>
        <thead>
            <tr>
            </tr>
        </thead>
        <tbody>
            <tr>
              <td> <%= dose.ingredient.name  %></td>
              <td> <%= dose.description %></td>
            </tr>
        </tbody>
    </table>
  <% end %>

</div>


<%= render "doses/new", cocktail: @cocktail, dose: @dose %>
